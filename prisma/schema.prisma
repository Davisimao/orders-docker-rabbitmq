generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id_order        String       @id @default(uuid())
  ds_product_name String
  ds_quantity     Int
  ds_status       StatusOption @default(pending)
  ds_created_by   User         @relation(fields: [id_user], references: [id_user])
  id_user         String
}

enum StatusOption {
  pending
  approved
  shipped
}

model User {
  id_user      String  @id @default(uuid())
  ds_email     String  @unique
  cd_document  String  @unique
  ds_password  String?
  ds_full_name String
  Order        Order[]
}
